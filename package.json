{
  "name": "simple-spider-solitaire",
  "private": true,
  "version": "0.1.0",
  "description": "Accessible Spider Solitaire for desktop and web",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "vite --host",
    "dev:desktop": "concurrently -k \"npm:dev:web\" \"npm:watch:electron\" \"npm:run:electron\"",
    "watch:electron": "tsc -p tsconfig.electron.json --watch --preserveWatchOutput",
    "run:electron": "wait-on tcp:5173 file:dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron dist-electron/main.js",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "tsc -b && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.example.simplespider",
    "productName": "Simple Spider Solitaire",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    }
  }
}
